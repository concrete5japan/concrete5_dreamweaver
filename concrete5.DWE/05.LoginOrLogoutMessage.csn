<?xml version="1.0" encoding="utf-8"?><snippet name="05.LoginOrLogoutMessage" description="insert a login & logout link" preview="code" type="block"><insertText location="beforeSelection"><![CDATA[	<?php 		$u = new User();		if ($u->isRegistered()) { ?>			<span class="sign-in"><?php echo t('Currently logged in as <b>%s</b>.', $u->getUserName())?> <a href="<?php echo $this->url('/login', 'logout')?>"><?php echo t('Sign Out')?></a></span>		<?php  } else { ?>			<span class="sign-in"><a href="<?php echo $this->url('/login')?>"><?php echo t('Sign In to Edit this Site')?></a></span>	<?php  } ?>]]></insertText><insertText location="afterSelection"><![CDATA[]]></insertText></snippet>